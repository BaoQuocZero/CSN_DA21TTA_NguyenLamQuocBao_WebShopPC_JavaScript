<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Node.js Basic</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Sản phẩm</a>
        <a href="/Trang-them-san-pham">Mới</a>
    </div>

    <div style="padding-left:16px">
        <div class="w3-container">
            <h2>List user Table</h2>

            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>Tên sản phẩm</th>
                        <th>Thể loại</th>
                        <th>Đơn giá</th>
                        <th>Tồn kho</th>
                        <th>Chip</th>
                        <th>Main</th>
                        <th>VGA</th>
                        <th>Nhà sản xuất</th>
                        <th>Ram</th>
                        <th>Ảnh</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < SanPham.length; i++) { %>
                        <tr>
                            <td>
                                <%= SanPham[i].MaSP %>
                            </td>
                            <td>
                                <%= SanPham[i].TenSP %>
                            </td>
                            <td>
                                <%= SanPham[i].MaTL %>
                            </td>
                            <td>
                                <%= SanPham[i].DonGiaSP %>
                            </td>
                            <td>
                                <%= SanPham[i].TonKhoSP %>
                            </td>
                            <td>
                                <%= SanPham[i].Chip %>
                            </td>
                            <td>
                                <%= SanPham[i].Main %>
                            </td>
                            <td>
                                <%= SanPham[i].VGA %>
                            </td>
                            <td>
                                <%= SanPham[i].NhanSanXuat %>
                            </td>
                            <td>
                                <%= SanPham[i].RAM %>
                            </td>
                            <td>
                                <img src="/image/<%= SanPham[i].AnhSP %>" alt="" width="100px" height="100px" />
                            </td>
                            <td>
                                <form action="/edit/<%= SanPham[i].MaSP %>" method="GET">
                                    <button type="submit">Edit</button>
                                </form>

                                <form action="/delete" method="POST">
                                    <input type="text" hidden value="<%= SanPham[i].MaSP %>" name="MaSP">
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>

    </div>
</body>

</html>